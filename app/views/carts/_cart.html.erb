<article>
	<% if notice %>
		<aside id="notice"><%= notice %></aside>
	<% end %>
	<h2>Your Cart</h2>
	<table>
		<%= render(cart.line_items) %>
		<tfoot>
			<tr>
				<th colspan="2">Total:</th>
				<td class="price"><%= number_to_currency(cart.total_price) %></td>
			</tr>
			<tr>
				<div class="actions">
				<td><%= button_to 'Empty cart', cart,
						method: :delete,
						data: { confirm: 'Are you sure?' } %></td>
				<td></td>
				<td align="right"><%= button_to 'Checkout', new_order_path,
						method: :get,
 						class: "checkout"%></td>
				</div>
			</tr>	
		</tfoot>
	</table>
</article>
